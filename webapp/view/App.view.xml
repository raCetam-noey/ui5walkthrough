<mvc:View
    controllerName="walkthrough.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <Button text="Say Hello"
                                press=".onShowHello"></Button>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
